<!doctype html>
<html lang="en">
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <!-- To include the navbar / header on to the page. -->
        <%- include partials/header.ejs %>
        <div>
             <div class="card mx-auto " style="width: 60%; margin-top:7%;">
                <div class="mx-auto my-3" style="padding: 15px;">
                    <div>
                        <h3>Active Visitors</h3>
                    </div>
                    <table class="table table-striped my-3">
                        <!-- The table Heads -->
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Email Address</th>
                                <th scope="col">Contact Number</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Using For loop to populate the table. -->
                            <% data.forEach(function(visitor){ %>  
                                <% if(req_name==visitor.name || req_name=='NA'){ %>
                                    <tr>
                                            <th scope="row"><%= visitor.name %></th>
                                            <td><%= visitor.email %></td>
                                            <td><%= visitor.phoneno %></td>
                                            <td>
                                        <form action="/visitors/checkout" method="POST">
                                            <input value="<%=visitor._id%>" name="visitor_id" hidden>
                                            <button type="submit" class="btn btn-primary">Check Out
                                            </button>
                                        </form>
                                            </td>
                                        </tr>
                                <% }}) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
