<!doctype html>
<html lang="en">
  <head>
    <title><%= title %></title>
  </head>
<link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
<link rel="stylesheet" href="/stylesheets/form.css">
<body>
    <%- include header.ejs %>
    <div>
        <div class="mx-auto" style=" width: 800px;height: 300px;">

            <form id="regForm" action="/visitors" method="POST">
                <h1>Register:</h1>
                <!-- One "tab" for each step in the form: -->
                <div class="form-group">

                    <label for="Visitor">Visitor</label>
                    <small id="roleHelp" class="form-text text-muted">We'll get you started.</small>
                    <div class="tab">
                        <label for="Visitor_Name">Name</label>
                        <input type="text"  name="v_name" class="form-control" id="visitor_name" aria-describedby="roleHelp" required>
                       
                        <label for="Visitor_Email">Email ID</label>
                        <input type="email"  name="v_email" class="form-control" id="visitor_email" aria-describedby="roleHelp" required>
                       
                        <label for="Visitor_Phno">Contact Number</label>
                        <input type="tel"  name="v_phno" class="form-control" id="visitor_phno" aria-describedby="roleHelp" required>
                    </div>
                    <div class="tab">
                        <label for="Visitor_Host">Host Name</label>
                        <select type="text"  name="vh_name" class="form-control" id="visitor_host" aria-describedby="roleHelp" required>
                            <%data.forEach( function (name){%>
                            <option value="<%=name.id%>"><%=name.name%></option>
                            <%})%>
                        </select>
                    </div>
                </div>
                <div style="overflow:auto;">
                    <div style="float:right;">
                        <button type="button" id="prevBtn" class="btn btn-primary" onclick="nextPrev(-1)">Previous</button>
                        <button type="button" id="nextBtn" class="btn btn-primary" onclick="nextPrev(1)">Next</button>
                    </div>
                </div>
                <!-- Circles which indicates the steps of the form: -->
                <div style="text-align:center;margin-top:40px;">
                    <span class="step"></span>
                    <span class="step"></span>
                </div>
            </form>
        </div>
    </div>
    <%- include step_form.ejs %>

</body>
</html>
