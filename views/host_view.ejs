<!doctype html>
<html lang="en">
  <head>
    <title><%= title %></title>
  </head>
  <body>

    <!-- To include the navbar/header of the page -->
    <%- include partials/header.ejs %>
    <div class="container">
      <div class="card mx-auto" style=" margin-top:7%;">
        <div class="mx-auto my-5">

          <!-- A form to get the details from the user -->
          <!-- On clicking the submit button, a JS function validateForm() will be called -->
          <!-- which will validate the input -->
          <form action="/hosts" id="host_form" method="POST" onsubmit="return validateForm()">
            <div class="form-group">  
              <small id="roleHelp" class="form-text text-muted">Let's get you started.</small>

              <label for="host_Name">Name</label>
              <input type="text"  name="h_name" class="form-control" id="host_name" required>

              <label for="host_Address">Address</label>
              <input type="text"  name="h_address" class="form-control" id="host_address" required>
              
              <label for="host_Email">Email ID</label>
              <input type="email"  name="h_email" class="form-control" id="host_email" required>

              <label for="host_Phno">Contact Number</label>
              <input type="tel"  name="h_phno" class="form-control" id="host_phno" required>

            </div>
            <button type="submit" class="btn btn-primary" >Submit</button>
          </form>

          <!-- This will include the validation function -->
          <%- include ./partials/host_form_validation.ejs %>
        </div>
      </div>
    </div>
  </body>
</html>
