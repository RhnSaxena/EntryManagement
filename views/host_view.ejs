<!doctype html>
<html lang="en">
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <%- include partials/header.ejs %>
    <div>
      <div class="mx-auto my-5" style=" width: 300px;height: 300px;">
        <form action="/hosts" method="POST">
          <div class="form-group">  
            <small id="roleHelp" class="form-text text-muted">Let's get you started.</small>

            <label for="host_Name">Name</label>
            <input type="text"  name="h_name" class="form-control" id="host_name" aria-describedby="roleHelp" required>

            <label for="host_Address">Address</label>
            <input type="text"  name="h_address" class="form-control" id="host_address" aria-describedby="roleHelp" required>
            
            <label for="host_Email">Email ID</label>
            <input type="email"  name="h_email" class="form-control" id="host_email" aria-describedby="roleHelp" required>

            <label for="host_Phno">Contact Number</label>
            <input type="tel"  name="h_phno" class="form-control" id="host_phno" aria-describedby="roleHelp" required>

          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>

      </div>
    </div>
  </body>
</html>
